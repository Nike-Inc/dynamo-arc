{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "module": "esnext",
    "target": "ES2019",
    "declaration": true,
    "strict": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "**/__tests__/*"]
}